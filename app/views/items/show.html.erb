<!-- show.html.erb -->
<div class="container mx-auto px-4">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Item Details</h1>
  </div>

  <%= render @item %>

  <div class="mt-4 flex space-x-2">
    <%= link_to "Edit this item", edit_item_path(@item), class: "px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-700" %>
    <%= link_to "Back to items", items_path, class: "px-4 py-2 text-white bg-gray-600 rounded hover:bg-gray-700" %>
    <%= button_to "Destroy this item", @item, method: :delete, class: "px-4 py-2 text-white bg-red-600 rounded hover:bg-red-700" %>
  </div>
</div>