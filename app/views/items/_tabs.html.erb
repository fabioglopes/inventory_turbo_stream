<!-- app/views/items/index.html.erb -->
<div class="text-sm font-medium text-center text-gray-500 border-b border-gray-200 dark:text-gray-400 dark:border-gray-700">
  <ul class="flex flex-wrap -mb-px">
    <li class="me-2">
      <%= link_to "All", items_path, class: "inline-block p-4 #{
        current_page?(items_path) ?
          'text-blue-600 border-b-2 border-blue-600' :
          'border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300'
      }" %>
    </li>
    <li class="me-2">
      <%= link_to "Pending", items_pending_index_path, class: "inline-block p-4 #{
        current_page?(items_pending_index_path) ?
          'text-blue-600 border-b-2 border-blue-600' :
          'border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300'
      }" %>
    </li>
    <li class="me-2">
      <%= link_to "Approved", items_approved_index_path, class: "inline-block p-4 #{
        current_page?(items_approved_index_path) ?
          'text-blue-600 border-b-2 border-blue-600' :
          'border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300'
      }" %>
    </li>
  </ul>
</div>