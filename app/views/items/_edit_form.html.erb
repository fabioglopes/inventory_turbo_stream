<tr id="<%= dom_id(item) %>">
  <td class="px-6 py-4 whitespace-nowrap text-sm">
    <%= form_with(model: @item, class: "contents") do |form| %>
      <%= form.text_field :sku,
                          class: "rounded-md border-gray-300 shadow-sm" %>
      <%= form.submit "Update",
                      class: "px-4 py-2 text-white bg-indigo-600 rounded hover:bg-indigo-700" %>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= @item.status %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium flex gap-2 items-center">

    <%= link_to "Cancel",
                item_path(@item),
                class: "px-4 py-2 text-gray-700 bg-gray-100 rounded hover:bg-gray-200" %>

    <% if item.may_approve? %>
      <%= button_to "Approve",
                    items_approved_path(@item),
                    method: :patch,
                    class: "px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-700" %>
    <% end %>
    <% if item.may_pending? %>
      <%= button_to "Pending",
                    items_pending_path(@item),
                    method: :patch,
                    class: "px-4 py-2 text-white bg-yellow-600 rounded hover:bg-yellow-700" %>
    <% end %>

    <%= button_to "Destroy",
                  item_path(@item),
                  method: :delete,
                  class: "px-4 py-2 text-white bg-red-600 rounded hover:bg-red-700",
                  data: { turbo_confirm: "Are you sure?" } %>
  </td>
</tr>
